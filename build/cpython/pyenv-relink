#!/bin/bash

REDISLABS_DIR=/var/opt/redislabs

if [[ -z $LOCAL ]]; then
	echo "LOCAL argument undefined. Aborting."
	exit 1
fi

[[ -z $GLOBAL ]] && GLOBAL=$REDISLABS_DIR/lib/modules/python3

if [[ -L $GLOBAL ]]; then
	rm -f $GLOBAL
elif [[ -d $GLOBAL ]]; then
	echo "$GLOBAL is a directory."
	exit 1
fi
ln -s $(realpath $LOCAL) $GLOBAL

exit 0
